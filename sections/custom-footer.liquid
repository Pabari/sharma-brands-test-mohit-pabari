                    </svg>
                    {%  if section.settings.newsletter_heading != blank %}
                    <h2 class="footer-block-heading">{{ section.settings.newsletter_heading }}</h2>
                    {% endif %}
                </div>
                {%  if section.settings.newsletter_subheading != blank %}
                <div class="footer-block-newsletter-info">
                    <p class="footer-block-subheading">{{ section.settings.newsletter_subheading }}</p>
                </div>
                {% endif %}
                <div class="footer-block-newsletter-form">
                    <form id="EmailForm" action="#" data-ajax-submit="#" method="GET" target="_blank" novalidate="novalidate" class="nl-sub-sec-form__email m-show">
                        <div class="nl-sub-sec-form__wrapper">
                            <input class="nl-sub-sec-form__input email__input" type="email" maxlength="256" name="email" data-name="Email" placeholder="ENTER YOUR EMAIL" id="k_id_email" required="">
                            <button type="submit" class="nl-sub-sec-form__button email__button" name="commit" id="Subscribe" aria-label="submit form email">
                                <svg width="30" height="26" viewBox="0 0 30 26" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M0.666992 13.0005H27.3337" stroke="white" stroke-width="4" stroke-miterlimit="10"></path>
                                    <path d="M18 3.66699L27.3333 13.0003L18 22.3337" stroke="white" stroke-width="4" stroke-miterlimit="10" stroke-linecap="square"></path>
                                </svg>
                            </button>
                            <div class="klaviyo_messages">
                                <div class="success_message" style="display:none;"></div>
                                <div class="error_message" style="display:none;"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
  </div>
</div>

{% if section.settings.footer_logo != blank %}
<div class="footer-content-logo">
  <a href="/" class="footer-logo-link link">
    <img src="{{ section.settings.footer_logo | image_url }}" alt="{{ shop.name }}">
  </a>
</div>
{% endif %}

<div class="footer-content-bottom">
  <div class="footer-content-bottom-wrapper page-width">
      <div class="footer-column footer-localization isolate"></div>
      <div class="footer-column footer-column--info">
          <div class="footer-copyright caption">
              <small class="copyright-content">
                <a class="link copyright-content-link" href="/">&copy; {{ shop.name }}</a>
              </small>
              {% if section.settings.privacy_menu != blank %}
                {%- for link in section.settings.privacy_menu.links -%}
                <small class="copyright-content">
                  <a class="link copyright-content-link" href="{{ link.url }}">{{ link.title }}</a>
                </small>
                {%- endfor -%}
              {% endif %}
          </div>
      </div>
  </div>
</div>

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "image_picker",
      "label": "Footer Label",
      "id": "footer_label"
    },
    {
      "type": "link_list",
      "label": "Footer Menu",
      "id": "footer_menu"
    },
    {
      "type": "checkbox",
      "label": "Enable Social Media",
      "id": "enable_social_media",
      "default": true
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "label": "Enable Newsletter",
      "id": "enable_newsletter",
      "default": true
    },
    {
      "type": "text",
      "label": "Newsletter Heading",
      "id": "newsletter_heading"
    },
    {
      "type": "text",
      "label": "Newsletter Subheading",
      "id": "newsletter_subheading"
    },
    {
      "type": "header",
      "content": "Footer Bottom"
    },
    {
      "type": "image_picker",
      "label": "Footer Logo",
      "id": "footer_logo"
    },
    {
      "type": "link_list",
      "label": "Privacy Menu",
      "id": "privacy_menu"
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}