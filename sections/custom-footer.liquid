<div class="footer-content-top page-width">
  <div class="footer-dotted-wrap">
      <div class="bd-img bd-hz"></div>
      <div class="bd-img bd-vr"></div>
      <div class="footer-blocks-wrapper grid ">
        {% if section.settings.footer_label != blank %}
        <div class="grid-item footer-lable">
            <img src="{{ section.settings.footer_label | image_url }}" alt="footer label"> 
        </div>
        {% endif %}
        {% if section.settings.footer_menu != blank %}
        <div class="grid-item linklist-links">
            {%- for link in section.settings.footer_menu.links -%}
            <li>
                <a href="{{ link.url }}" class="link link--text">{{ link.title }}</a>
            </li>
            {%- endfor -%}
        </div>
        {% endif %}
        {% if settings.social_facebook_link != blank or settings.social_instagram_link != blank or settings.social_tiktok_link != blank or settings.social_twitter_link != blank %}
        <div class="grid-item footer_social-links">
            {% if settings.social_instagram_link != blank %}
