{% if section.settings.desktop_image != blank %}
<link rel="stylesheet" href="{{ 'section-hero-banner.css' | asset_url }}" media="print" onload="this.media='all'">
<div class="hero-banner-wrapper">
    <img class="hero-banner-img" src="{{ section.settings.desktop_image | image_url }}" alt="banner-image">
    <img class="hero-banner-img mob-img" src="{% if section.settings.mobile_image != blank %} {{ section.settings.mobile_image | image_url }} {% else %} {{ section.settings.desktop_image | image_url }} {% endif %}" alt="mobile banner image">
    <div class="hero-banner-content">
        {% if section.settings.heading != blank %}
        <h2 class="hero-banner-heading">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.button_label != blank and section.settings.button_url != blank %}
        <a class="hero-banner-btn" href="{{ section.settings.button_url }}">{{ section.settings.button_label }}</a>
        {% endif %}
    </div>
</div>
{% endif %}
{% schema %}
{
  "name": "Hero Banner",
  "tag": "div",
  "class": "hero-banner",
  "settings": [
    {
      "type": "image_picker",
      "label": "Desktop Image",
      "id": "desktop_image"
    },
    {
      "type": "image_picker",
      "label": "Mobile Image",
      "id": "mobile_image"
    },
    {
      "type": "text",
      "label": "Heading",
      "id": "heading"
    },
    {
      "type": "text",
      "label": "Button Label",
      "id": "button_label"
    },
    {
      "type": "url",
      "label": "Button URL",
      "id": "button_url"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}