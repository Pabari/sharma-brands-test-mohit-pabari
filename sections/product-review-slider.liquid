{% if section.blocks.size > 0 %}
{{ 'section-product-review-slider.css' | asset_url | stylesheet_tag }}
<div class="section-products-review">
    <div class="page-width">
        <div class="products-review-wrap products-review-wrap-{{ section.id }}">
            <div class="swiper products-review-swiper">
                <div class="swiper-wrapper">
                  {% for block in section.blocks %}
                    <div class="products-review products-review-block swiper-slide">
                        <div class="products-review-title-wrapper">
                            <span class="products-review-title">Classic Negroni</span>
                        </div>
                        <div class="products-review-image">
                            <a href="#" class="products-review-image-wrapper">
                            <img class="mob-prod-hide" src="//drinkviacarota.com/cdn/shop/files/Rectangle_104_c64efc0a-58c7-43f9-9741-559b83e5eca7.png?v=1674580296" alt="Product image">
                            <img class="mob-prod-show" src="//drinkviacarota.com/cdn/shop/files/Rectangle_104_4.png?v=1674734553" alt="Product image">
                            </a>
                        </div>
                        <div class="products-review-stars">
                            {% for i in (1..5) limit : block.settings.star %}
                            <i>
                                <svg width="18" height="17" viewBox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M6.48326 11.3277C6.80106 11.1359 7.19894 11.1359 7.51674 11.3277L9.915 12.7752C10.6723 13.2323 11.6065 12.5533 11.4056 11.6919L10.7691 8.96361C10.6848 8.60211 10.8076 8.22365 11.0882 7.98059L13.2086 6.14369C13.8772 5.56448 13.5198 4.46622 12.6384 4.39144L9.84887 4.15478C9.47929 4.12343 9.15742 3.89009 9.01268 3.54859L7.92072 0.972174C7.57613 0.159146 6.42387 0.159146 6.07928 0.972174L4.98732 3.54859C4.84258 3.89009 4.52071 4.12343 4.15114 4.15478L1.36163 4.39144C0.480205 4.46622 0.122797 5.56448 0.791395 6.14369L2.9118 7.9806C3.19236 8.22365 3.31521 8.60211 3.23087 8.96361L2.59441 11.6919C2.39345 12.5533 3.32768 13.2323 4.085 12.7752L6.48326 11.3277Z" fill="#654E39"></path>
                                </svg>
                            </i>
                            {% endfor %}
                        </div>
                        {% if block.settings.review %}
                        <span class="products-review-review">
                          {{ block.settings.review }}
                        </span>
                        {% endif %}
                        {% if block.settings.name %}
                        <span class="products-review-author">{{ block.settings.name }}</span>
                        {% endif %}
                        {% if block.settings.from %}
                        <span class="products-review-author-from">{{ block.settings.from }}</span>
                        {% endif %}
                        <a href="#" class="products-review-link">
                          <span>BUY NOW â€“</span>
                          <span>$0</span>
                        </a>
                    </div>
                  {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    console.log(window.innerWidth);
    if($(window).width() <= 990 && $(window).width() > 650) {
      console.log('52');
        let prod_rev_slider = new Swiper(".products-review-wrap-{{ section.id }} .products-review-swiper", {
            slidesPerView: 1.3,
            centeredSlides: true,
            spaceBetween: 16,
        });
    }
    if($(window).width() <= 650) {
      console.log('60');
        let prod_rev_slider = new Swiper(".products-review-wrap-{{ section.id }} .products-review-swiper", {
            slidesPerView: 1.18,
            centeredSlides: true,
            spaceBetween: 16,
        });
    }
</script>
{%- endif -%}
{% schema %}
{
  "name": "Product Review Slider",
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "limit": 4,
      "settings": [
        {
          "type": "product",
          "label": "Product",
          "id": "product"
        },
        {
          "type": "richtext",
          "label": "Review",
          "id": "review"
        },
        {
          "type": "text",
          "label": "Name",
          "id": "name"
        },
        {
          "type": "text",
          "label": "From",
          "id": "from"
        },
        {
          "type": "range",
          "label": "Star",
          "id": "star",
          "default": 5,
          "min": 1,
          "max": 5,
          "step": 1
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Review Slider"
    }
  ]
}
{% endschema %}