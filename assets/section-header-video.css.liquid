.header-video {
    -webkit-transition: .2s;
    transition: .2s;
    height: calc(100vh - 72px)
}

@media screen and (min-width: 992px) {
    .header-video {
        height: 100vh
    }
}

.header-video .header-video-wrapper {
    position: relative;
    padding: 5px;
    margin: 155px 20px 50px;
    height: calc(100% - 207px);
    border: 2px solid var(--color-links);
}

@media screen and (min-width: 767px) {
    .header-video .header-video-wrapper {
        padding: 14px;
        margin: 32px 32px 24px;
        height: calc(100% - 62px);
    }
}

@media screen and (min-width: 992px) {
    .header-video .header-video-wrapper {
        height: calc(100vh - 58px);
    }
}

.header-video .header-video-wrapper .video {
    height: 100%;
    width: 100%;
    -o-object-fit: cover;
    object-fit: cover;
}

.header-video .header-video-wrapper .header-video-logo {
    position: absolute;
    top: -125px;
    left: 50%;
    -webkit-transform: translate(-50%, 0%);
    transform: translate(-50%);
    width: 80%;
    max-width: 285px;
}

@media screen and (min-width: 767px) {
    .header-video .header-video-wrapper .header-video-logo {
        -webkit-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        width: -webkit-fit-content;
        width: -moz-fit-content;
        width: fit-content;
        top: 51.5%;
        width: 31.5%;
        max-width: initial;
    }
}

.header-video .header-video-wrapper .header-video-logo img {
    margin-bottom: 10px;
    width: 100%;
    height: 100%;
}